<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData[nameof(BasePageModel.Title)]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar mb-3">
            <div class="container">
                <div class="d-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 flex-row">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Lists/All">Lists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Shops/Index">Shops</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Brimstone Shopping Lists
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/elementHelper.js" asp-append-version="true"></script>
    <script src="~/js/eventNames.js" asp-append-version="true"></script>
    <script src="~/js/reloader.js" asp-append-version="true"></script>
    <script src="~/js/checkedToggle.js" asp-append-version="true"></script>
    <script src="~/js/contentLoader.js" asp-append-version="true"></script>
    <script src="~/js/lists.js" asp-append-version="true"></script>
    <script src="~/js/shops.js" asp-append-version="true"></script>
    <script src="~/js/shoppingMode.js" asp-append-version="true"></script>
    <script src="~/js/requiredFor.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>