@model RegisterItemModel
<div class="modal" tabindex="-1" id="@Model.ModalId" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Register a new item</h5>
            </div>
            <div class="modal-body toggle-checkbox-container">
                <p>Register a new item for shopping lists at @Model.ShopName.</p>

                <div class="form-check">
                    <input class="form-check-input toggle-checkbox" type="checkbox" value="" id="@Model.AddToStartCheckboxId">
                    <label class="form-check-label" for="@Model.AddToStartCheckboxId">
                        Add item to the start of the list
                    </label>
                </div>

                <div class="mt-3 toggle-checkbox-target hide-on-checked">
                    <label class="form-label">Insert the item after:</label>
                    <select class="form-select">
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>
