@page
@model ShoppingList.Web.Pages.ShopsModel
@{
    if (Model.ShopsWithProducts.Any())
    {
        <h2>All Shops</h2>

        <p>Click a shop to view all of it's registered products.</p>

        <div class="accordion accordion-flush" id="shopAccordion">

            @foreach (var shopWithProducts in Model.ShopsWithProducts)
            {
                var shop = shopWithProducts.Key;
                var products = shopWithProducts.Value;

                string headerId = $"{shop.Name}-header";
                string bodyId = $"{shop.Name}-products";
                string registerItemModalId = $"{shop.Name}-registerItemModal";

                <div class="accordion-item">
                    <h2 class="accordion-header" id="@headerId">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@bodyId" aria-expanded="false" aria-controls="@bodyId">
                            @shop.Name
                        </button>
                    </h2>
                    <div id="@bodyId" class="accordion-collapse collapse mt-2" aria-labelledby="@headerId" data-bs-parent="#shopAccordion">

                        <button class="btn btn-primary btn-sm mb-2" data-bs-toggle="modal" data-bs-target="#@registerItemModalId">
                            <i class="fa-solid fa-plus"></i> Register Product
                        </button>

                        <ul>
                            @foreach (var product in products)
                            {
                                <li>@product.Name</li>
                            }
                        </ul>
                    </div>
                </div>

                @* Register item modal *@
                <partial name="_RegisterItemModal" model="new RegisterItemModel { ShopName = shop.Name, ModalId = registerItemModalId }" />
            }

        </div>
    }
    else
    {
        <p>There are no shops registered.</p>
    }
}
