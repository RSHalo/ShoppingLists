@model IList<ShopModel>
<div class="modal" id="addListModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a new shopping list</h5>
            </div>
            <form method="post">
                <div class="modal-body">
                    <p>Add a new shopping list</p>

                    <div class="mb-3">
                        <label for="listName" class="form-label">Item name:</label>
                        <input type="text" class="form-control" name="listName" id="listName" data-required-for="#addListSubmit">
                    </div>

                    <label for="shopName" class="form-label">The shop that the list is for:</label>
                    <select class="form-select" name="shopName" id="shopName" asp-items="Model.Select(shop => new SelectListItem(shop.Name, shop.Name))">
                    </select>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="addListSubmit">
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
